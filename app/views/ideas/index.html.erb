<!DOCTYPE html>
<html>
<head>
	<title>Ideator</title>
</head>
<body>
<%= simple_form_for Idea.new do |f| %>
  <%= f.input :description %>
  <%= f.input :author %>
  <%= f.submit 'Submit' %>
<% end %>
	<% @ideas.each do|idea| %>
		<div class = "panel panel-default">
			<div class="panel-body">
				<blockquote>
				<p> <%= idea.description %></p>
				<small> <%= idea.author %> </small>
			</blockquote>
			</div>	
		</div>	
	<% end %>	
</body>
</html>
